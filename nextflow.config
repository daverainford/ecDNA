// Set SLURM as the primary executor and specify the default queue
executor {
    name = 'slurm'
    queue = 'defq'
    queueSize = 10  
}

// Allocate HPC resources to each process
process {
    // Specific settings for 'TestInstall' process
    withName: 'TestInstall' {
        cpus = 20
        memory = '64 GB'
        time = '4 h'
    }

    // Specific settings for 'AmpliconSuite' process
    withName: 'AmpliconSuite' {
        cpus = 4
        memory = '20 GB'
        time = '48 h'
    }

    // Specific settings for 'DataSummary' process
    withName: 'DataSummary' {
        cpus = 2
        memory = '1 GB'
        time = '24 h'
    }
}

// Enable the use of Singularity for containerized processes
singularity {
    enabled = true
    // Add any additional Singularity-specific settings if needed
}